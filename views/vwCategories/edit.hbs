{{#section 'js'}}
<script>
  function checkBeforeDelCatLv1(countCatLv2) {
    if (countCatLv2 > 0) {
      return false;
    }
    return true;
  }
</script>
{{/section}}

<div class="card">
  <h4 class="card-header">
    Category
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input type="text" readonly class="form-control" id="txtCatID" name="CatIDLv1"
          value="{{this.category.CatIDLv1}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category</label>
        <input type="text" class="form-control" id="txtCatName" name="CatNameLv1" autofocus
          value="{{this.category.CatNameLv1}}">
      </div>
      <div id="thongbao">

      </div>
      <button type="submit" class="btn btn-danger" onclick="return checkBeforeDelCatLv1({{countCatLv2}})"
        formaction="/admin/categories/delCatLv1" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>

      <div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Lý do bị từ chối</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              Bạn phải xóa hết các chuyên mục cấp 1 của nó!!!
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>

          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-success" formaction="/admin/categories/patchCatLv1">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
</div>