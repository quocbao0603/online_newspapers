{{#section 'js'}}
<script>
function myFunction(user) {
  if(!user){
    var r = confirm("Bạn phải đăng nhập để gửi nhận xét!!!");
    if (r == true) {
      return true;
    } else {
      return false;
    } 
  }
  return true;
}
</script>
<script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>

<script>
    function downloadAsPDF(userPremium) {
        if(!userPremium){
            alert("Bạn phải đăng ký tài khoản Premium để tải bài viết này!!!");
        }
        else{
            const element = document.querySelector('#contentPost');
            var opt = {
            margin: [15, 0, 15, 0],
            filename: `CV-${name}.pdf`,
            image: { type: 'jpeg', quality: 1 },
                html2canvas: {
                    dpi: 192,
                    scale:4,
                    letterRendering: true,
                    useCORS: true
            },
            jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            html2pdf().set(opt).from(element).save();
        }
     
    }
</script>
<script>
function checkPostPremium(postPremium) {
  if(postPremium){
    var r = confirm("Bạn phải đăng ký tài khoản Premium để xem được bài viết này!!!");
    if (r == true) {
      return true;
    } else {
      return false;
    } 
  }
}
</script>
<script>
  $("h4").css("background-color", "yellow");
  $("img").css("style","object-fit: cover;");
</script>
{{/section}}



<div class="container-fluid">
  <div class="container">
      <div class="row">
          <div class="col-lg-8">
              <!-- News Detail Start -->
              <div class="position-relative mb-3" id="contentPost">
                  <img class="img-fluid w-100" src="/public/imgs/posts/{{this.post.PostID}}/main_thumbs.jpg" style="object-fit: cover;">
                  <div class="bg-white border border-top-0 p-4">
                      <div class="mb-3">
                          <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                              href="/posts/byCat/{{this.post.CatIDLv1}}/{{this.post.CatIDLv2}}">{{this.post.CatNameLv1}}|{{this.post.CatNameLv2}}</a>
                          <a class="text-body" href="">{{this.post.Date}}</a>
                      </div>
                      <h1 class="mb-3 text-secondary text-uppercase font-weight-bold">{{this.post.PostName}}</h1>
                      <p class="card-text">
                        {{{this.post.FullContent}}}
                      </p>
                      
                  </div>
                  <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
                      <div class="d-flex align-items-center">
                          <img class="rounded-circle mr-2" src="/public/img/avatar.jpg" width="25" height="25" alt="">
                          <span>{{author}}</span>
                      </div>
                      <div class="d-flex align-items-center">
                          <span class="ml-3"><i class="far fa-eye mr-1 "></i>{{this.post.Views}}</span>
                          <span class="ml-3"><i class="far fa-comment mr-1 "></i>{{totalCmts}}</span>
                          <span class="ml-3"><i class="fa fa-download mr-1 fa-2x" aria-hidden="true" onclick="downloadAsPDF({{premium}})"></i></span>
                          
                      </div>
                  </div>
              </div>
              <!-- News Detail End -->
 
              <!-- Comment List Start -->
                 <div class="mb-3">
                    <div class="section-title mb-0">
                      {{!-- <h4 class="m-0 text-uppercase font-weight-bold">3 Comments</h4> --}}
                      <h2 ><b>Comments</b></h2>
                    </div>
                      <div class="bg-white border border-top-0 p-4">
                        {{#each comments}}
