<div class="card">
  <h4 class="card-header">
    {{this.post.CatID}}
  </h4>
  <div class="card-body">
    <h5 class="card-title">{{this.post.PostName}}</h5>
    <p class="card-text">
      {{{this.post.FullContent}}}
    </p>
  </div>
  <div class="mb-3">
    <div class="section-title mb-0">
      {{!-- <h4 class="m-0 text-uppercase font-weight-bold">3 Comments</h4> --}}
      <h4 ><b>Comments</b></h4>
    </div>
      <div class="bg-white border border-top-0 p-4">
        {{#each comments}}
          <div class="media mb-4">
          <img src="/public/img/avatar.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
          <div class="media-body">
              <h6><a class="text-secondary font-weight-bold" href="">{{name}}</a> <small><i>{{Date}}</i></small></h6>
              <p>{{Content}}</p>
          </div>
        </div>
        {{/each}}
        
        
      </div>
  </div>
  <!-- Comment Form Start -->
  <div class="mb-3">
      <div class="bg-white border border-top-0 p-4">
        <form method="POST" action="/posts/details/{{this.post.PostID}}">
          <div class="form-group">
              <label for="message">Nội dung góp ý</label>
              <textarea id="message" cols="30" rows="5" class="form-control" name="message"></textarea>
          </div>
          <div class="form-group mb-0">
              <input type="submit" value="Đăng"
                  class="btn btn-primary font-weight-semi-bold py-2 px-3">
          </div>
        </form>
      </div>
    </div>
  <!-- Comment Form End -->
</div>