                                        <a class="badge badge-primary text-uppercase font-weight-semi-bold p-1 mr-2" style="font-size: 10px;"
                                        href="/posts/byCat/{{CatIDLv1}}/{{CatIDLv2}}">{{CatNameLv1}}|{{CatNameLv2}}</a>
                                        {{#if this.Premium}}
                                            <span class="badge badge-primary text-uppercase font-weight-semi-bold p-1 mr-2" style="background-color:coral"><i class="fa fa-diamond" aria-hidden="true"></i>Premium</span>
